{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Main",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "sourceMaps": true,
            "preLaunchTask": "npm: build_main:dev"
        },
        {
            "name": "Debug Webview",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/public",
            "breakOnLoad": true
        },
        {
            "name": "Debug All",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "sourceMaps": true,
            "preLaunchTask": "npm: build:dev"
        }
    ]
}